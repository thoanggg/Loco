<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.myapp.controllers.PcapController">
    <top>
        <AnchorPane prefHeight="60.0">
            <children>
                <Label text="Pcap Analysis" AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="14.0">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
                <Button fx:id="loadButton" mnemonicParsing="false" onAction="#loadFile" text="Load Pcap" AnchorPane.rightAnchor="80.0" AnchorPane.topAnchor="14.0" />
                <Button mnemonicParsing="false" onAction="#switchToStart" text="Back" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0" />
            </children>
        </AnchorPane>
    </top>
    <left>
        <VBox prefWidth="150.0" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Button maxWidth="1.7976931348623157E308" text="Basic Packet Info" />
                <Button maxWidth="1.7976931348623157E308" text="Protocol Analysis" />
                <Button maxWidth="1.7976931348623157E308" text="Traffic Analysis" />
                <Button maxWidth="1.7976931348623157E308" text="IP Geolocation" />
                <Button maxWidth="1.7976931348623157E308" text="Session Extraction" />
                <Button maxWidth="1.7976931348623157E308" text="Sensitive Data" />
                <Button maxWidth="1.7976931348623157E308" text="Security Risks" />
                <Button maxWidth="1.7976931348623157E308" text="File Extraction" />
            </children>
        </VBox>
    </left>
    <center>
        <TableView fx:id="packetTable" prefHeight="200.0" BorderPane.alignment="CENTER">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
</BorderPane>
