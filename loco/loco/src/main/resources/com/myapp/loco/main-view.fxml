<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.myapp.loco.MainController">

    <!-- SIDEBAR -->
    <left>
        <VBox prefWidth="220.0" styleClass="sidebar">
            <Label text="LOCO SECURITY" styleClass="app-title" />
            <VBox spacing="5.0" VBox.vgrow="ALWAYS">
                <padding><Insets top="20"/></padding>
                <Button fx:id="btnDashboard" text="Dashboard" maxWidth="Infinity" styleClass="menu-button, active" onAction="#switchView" />
                <Button fx:id="btnLogExplorer" text="Log Explorer" maxWidth="Infinity" styleClass="menu-button" onAction="#switchView" />
                <!-- THÃŠM Má»šI: NÃºt Rules -->
                <Button fx:id="btnRules" text="âš¡ Rules Engine" maxWidth="Infinity" styleClass="menu-button" onAction="#switchView" />
                <Button fx:id="btnAnalyze" text="ðŸ“Š Analyze" maxWidth="Infinity" styleClass="menu-button" onAction="#switchView" />

                <Button text="âš™ï¸ Settings" maxWidth="Infinity" styleClass="menu-button" />
            </VBox>
        </VBox>
    </left>

    <!-- CONTENT -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-padding: 30;">

            <!-- VIEW 1: DASHBOARD -->
            <VBox fx:id="dashboardView" spacing="20.0">
                <Label text="Endpoint Security Dashboard" styleClass="content-header"/>
                <HBox spacing="20.0">
                    <VBox styleClass="card" prefWidth="250">
                        <Label text="Active Agents" styleClass="card-title"/>
                        <Label fx:id="lblActiveAgents" text="0" styleClass="card-value"/>
                    </VBox>
                    <VBox styleClass="card" prefWidth="250">
                        <Label text="Total Detections" styleClass="card-title"/>
                        <!-- Label hiá»ƒn thá»‹ sá»‘ lÆ°á»£ng cáº£nh bÃ¡o -->
                        <Label fx:id="lblTotalAlerts" text="0" styleClass="card-value" style="-fx-text-fill: #ffb74d;"/>
                    </VBox>
                    <VBox styleClass="card" prefWidth="250">
                        <Label text="Critical Alerts" styleClass="card-title"/>
                        <Label text="0" styleClass="card-value" style="-fx-text-fill: #ef5350;"/>
                    </VBox>
                </HBox>
                <VBox spacing="10" VBox.vgrow="ALWAYS">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Managed Hosts" style="-fx-font-size: 18px; -fx-text-fill: white; -fx-font-weight: bold;"/>
                        <Button text="ðŸ“¡ Scan Network" onAction="#handleScanNetwork" styleClass="button-primary"/>
                        <Label fx:id="scanStatusLabel" text="" style="-fx-text-fill: #a0a0b0; -fx-font-style: italic;"/>
                        <TextField fx:id="agentIpField" promptText="Manual Add IP" prefWidth="150" />
                        <Button text="+" onAction="#handleAddAgent" style="-fx-background-color: #444; -fx-text-fill: white;"/>
                    </HBox>
                    <TableView fx:id="agentTableView" VBox.vgrow="ALWAYS">
                        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                        <columns>
                            <TableColumn fx:id="colAgentName" text="Host" />
                            <TableColumn fx:id="colAgentIp" text="IP Address" />
                            <TableColumn fx:id="colAgentUser" text="User" />
                            <TableColumn fx:id="colAgentStatus" text="Status" />
                            <TableColumn fx:id="colAgentLastSeen" text="Last Seen" />
                            <TableColumn fx:id="colAgentAction" text="Action" />
                        </columns>
                    </TableView>
                </VBox>
            </VBox>

            <!-- VIEW 2: LOG EXPLORER -->
            <VBox fx:id="logExplorerView" spacing="15.0" visible="false">
                <Label text="Centralized Log Explorer" styleClass="content-header"/>

                <HBox spacing="10.0" alignment="CENTER_LEFT" styleClass="card">
                    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                    <Label text="Source:"/>
                    <ComboBox fx:id="targetAgentCombo" prefWidth="220.0" promptText="Select Source"/>
                    <Button text="X" onAction="#handleClearTarget" style="-fx-background-color: #555; -fx-text-fill: white; -fx-font-size: 10px;">
                        <tooltip><Tooltip text="Reset to All Agents"/></tooltip>
                    </Button>
                    <Label text="Channel:"/>
                    <ComboBox fx:id="logChannelComboBox" prefWidth="220.0" />
                    <Button fx:id="getLogsButton" text="Fetch Logs" onAction="#handleGetLogs" styleClass="button-primary"/>
                    <ToggleButton fx:id="autoRefreshToggle" text="Auto-Refresh" />
                    <ProgressIndicator fx:id="loadingIndicator" prefHeight="20.0" prefWidth="20.0" visible="false"/>
                </HBox>

                <!-- Filter Toolbar -->
                <HBox spacing="10.0" alignment="CENTER_LEFT" style="-fx-background-color: #232336; -fx-padding: 10; -fx-background-radius: 5;">
                    <Label text="ðŸ” Filters:" style="-fx-text-fill: #a0a0b0; -fx-font-weight: bold;"/>
                    <TextField fx:id="filterUserField" promptText="Filter by User..." prefWidth="150"/>
                    <TextField fx:id="filterEventIdField" promptText="Event ID..." prefWidth="100"/>
                    <Label text="From:" style="-fx-text-fill: #a0a0b0;"/>
                    <DatePicker fx:id="filterStartDate" prefWidth="120" promptText="Start Date"/>
                    <Label text="To:" style="-fx-text-fill: #a0a0b0;"/>
                    <DatePicker fx:id="filterEndDate" prefWidth="120" promptText="End Date"/>
                    <Button text="Reset Filters" onAction="#handleResetFilters" style="-fx-background-color: #444; -fx-text-fill: white;"/>
                </HBox>

                <TableView fx:id="logTableView" VBox.vgrow="ALWAYS">
                    <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="eventIdColumn" text="Event ID" prefWidth="60"/>
                        <TableColumn fx:id="timeColumn" text="Time" prefWidth="140"/>
                        <TableColumn fx:id="hostColumn" text="Computer" prefWidth="120"/>
                        <TableColumn fx:id="userColumn" text="User" prefWidth="100"/>
                        <TableColumn fx:id="providerColumn" text="Provider" prefWidth="120"/>
                        <TableColumn fx:id="levelColumn" text="Level" prefWidth="60"/>
                        <TableColumn fx:id="descriptionColumn" text="Description"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- VIEW 3: RULES ENGINE (Má»šI) -->
            <VBox fx:id="rulesView" spacing="15.0" visible="false">
                <Label text="Active System Rules (MITRE ATT&amp;CK / Sigma)" styleClass="card-title" />
                
                <javafx.scene.control.SplitPane orientation="VERTICAL" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
                    <!-- Báº£ng danh sÃ¡ch luáº­t -->
                    <VBox spacing="5" VBox.vgrow="ALWAYS">
                        <Label text="Active Rules" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                        <TableView fx:id="rulesTableView" VBox.vgrow="ALWAYS">
                            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                            <columns>
                                <TableColumn fx:id="ruleNameCol" text="Rule Name" />
                                <TableColumn fx:id="ruleFieldCol" text="MITRE ID" />
                                <TableColumn fx:id="ruleConditionCol" text="Description" />
                                <TableColumn fx:id="ruleSeverityCol" text="Severity" />
                                <TableColumn fx:id="ruleValueCol" visible="false" />
                            </columns>
                        </TableView>
                    </VBox>

                    <!-- SIGMA EDITOR -->
                    <VBox spacing="10" style="-fx-padding: 10;">
                        <Label text="Detection-as-Code Editor (Sigma YAML)" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                        <javafx.scene.control.TextArea fx:id="sigmaRuleEditor" promptText="Paste Sigma YAML Rule here..." prefRowCount="8"
                                                       style="-fx-font-family: 'Consolas', 'Monospace';"/>
                        <HBox spacing="10" alignment="CENTER_RIGHT">
                            <Label text="Supported: title, id, level, detection.selection" style="-fx-text-fill: #999; -fx-font-size: 11px;"/>
                            <Button text="ðŸ“‚ Load File" onAction="#handleLoadRuleFile" style="-fx-background-color: #555; -fx-text-fill: white;"/>
                            <Button text="Import Rule" onAction="#handleImportRule" styleClass="button-primary"/>
                        </HBox>
                    </VBox>
                </javafx.scene.control.SplitPane>
            </VBox>

            <!-- VIEW 4: ANALYSIS (Má»šI) -->
            <VBox fx:id="analyzeView" spacing="20.0" visible="false">
                <Label text="Security Analysis" styleClass="content-header"/>
                
                <HBox spacing="20.0" VBox.vgrow="ALWAYS">
                    <VBox styleClass="card" HBox.hgrow="ALWAYS">
                        <Label text="Alert Severity Distribution" styleClass="card-title"/>
                        <javafx.scene.chart.PieChart fx:id="alertSeverityChart" title="Alerts by Severity" />
                    </VBox>
                    <VBox styleClass="card" HBox.hgrow="ALWAYS">
                        <Label text="Events by Agent" styleClass="card-title"/>
                        <javafx.scene.chart.BarChart fx:id="eventsByAgentChart" title="Events per Agent">
                            <xAxis><javafx.scene.chart.CategoryAxis label="Agent" /></xAxis>
                            <yAxis><javafx.scene.chart.NumberAxis label="Count" /></yAxis>
                        </javafx.scene.chart.BarChart>
                    </VBox>
                </HBox>

                <Label text="Recent Detections" styleClass="content-header"/>
                <TableView fx:id="alertTableView" VBox.vgrow="ALWAYS">
                    <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                     <columns>
                        <TableColumn fx:id="colAlertSeverity" text="Severity" />
                        <TableColumn fx:id="colAlertDetection" text="Detection" />
                        <TableColumn fx:id="colAlertDate" text="Date" />
                        <TableColumn fx:id="colAlertHost" text="Host" />
                        <TableColumn fx:id="colAlertStatus" text="Status" />
                    </columns>
                </TableView>
            </VBox>

        </StackPane>
    </center>
</BorderPane>