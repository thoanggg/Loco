<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.myapp.loco.MainController">

    <!-- SIDEBAR (Menu TrÃ¡i) -->
    <left>
        <VBox prefWidth="220.0" styleClass="sidebar">
            <Label text="ðŸ›¡ï¸ LOCO SECURITY" styleClass="app-title" />
            <VBox spacing="5.0" VBox.vgrow="ALWAYS">
                <padding><Insets top="20"/></padding>
                <Button fx:id="btnDashboard" text="ðŸ  Dashboard" maxWidth="Infinity" styleClass="menu-button, active" onAction="#switchView" />
                <Button fx:id="btnLogExplorer" text="ðŸ” Log Explorer" maxWidth="Infinity" styleClass="menu-button" onAction="#switchView" />
                <Button text="âš™ï¸ Settings" maxWidth="Infinity" styleClass="menu-button" />
            </VBox>
        </VBox>
    </left>

    <!-- CONTENT (Ná»™i dung ChÃ­nh) -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-padding: 30;">

            <!-- VIEW 1: DASHBOARD (Quáº£n lÃ½ Agent) -->
            <VBox fx:id="dashboardView" spacing="20.0">
                <Label text="Endpoint Security Dashboard" styleClass="content-header"/>

                <!-- Thá»‘ng kÃª (Cards) -->
                <HBox spacing="20.0">
                    <VBox styleClass="card" prefWidth="250">
                        <Label text="Active Agents" styleClass="card-title"/>
                        <Label fx:id="lblActiveAgents" text="0" styleClass="card-value"/>
                    </VBox>
                    <VBox styleClass="card" prefWidth="250">
                        <Label text="Total Detections" styleClass="card-title"/>
                        <Label text="12" styleClass="card-value" style="-fx-text-fill: #ffb74d;"/>
                    </VBox>
                    <VBox styleClass="card" prefWidth="250">
                        <Label text="Critical Alerts" styleClass="card-title"/>
                        <Label text="3" styleClass="card-value" style="-fx-text-fill: #ef5350;"/>
                    </VBox>
                </HBox>

                <!-- Danh sÃ¡ch Agent -->
                <VBox spacing="10" VBox.vgrow="ALWAYS">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Managed Hosts" style="-fx-font-size: 18px; -fx-text-fill: white; -fx-font-weight: bold;"/>

                        <!-- NÃºt Scan Network -->
                        <Button text="ðŸ“¡ Scan Network" onAction="#handleScanNetwork" styleClass="button-primary"/>
                        <Label fx:id="scanStatusLabel" text="" style="-fx-text-fill: #a0a0b0; -fx-font-style: italic;"/>

                        <!-- Ã” nháº­p thá»§ cÃ´ng -->
                        <TextField fx:id="agentIpField" promptText="Manual Add IP" prefWidth="150" />
                        <Button text="+" onAction="#handleAddAgent" style="-fx-background-color: #444; -fx-text-fill: white;"/>
                    </HBox>

                    <TableView fx:id="agentTableView" VBox.vgrow="ALWAYS">
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                        <columns>
                            <TableColumn fx:id="colAgentName" text="Host" />
                            <TableColumn fx:id="colAgentIp" text="IP Address" />
                            <TableColumn fx:id="colAgentUser" text="User" />
                            <TableColumn fx:id="colAgentStatus" text="Status" />
                            <TableColumn fx:id="colAgentLastSeen" text="Last Seen" />
                            <TableColumn fx:id="colAgentAction" text="Action" />
                        </columns>
                    </TableView>
                </VBox>
            </VBox>

            <!-- VIEW 2: LOG EXPLORER (Chá»©c nÄƒng cÅ©) -->
            <VBox fx:id="logExplorerView" spacing="15.0" visible="false">
                <Label text="Log Explorer" styleClass="content-header"/>

                <HBox spacing="10.0" alignment="CENTER_LEFT" styleClass="card">
                    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                    <Label text="Source:"/>
                    <TextField fx:id="currentTargetField" promptText="Localhost or Agent IP" editable="false" prefWidth="150" style="-fx-opacity: 0.8;"/>
                    <Label text="Channel:"/>
                    <ComboBox fx:id="logChannelComboBox" prefWidth="250.0" />
                    <Label text="Limit:"/>
                    <Spinner fx:id="eventCountSpinner" initialValue="50" max="1000" min="1" prefWidth="80.0" />
                    <Label text="XPath:"/>
                    <TextField fx:id="xpathQueryField" promptText="Optional XPath..." HBox.hgrow="ALWAYS" />
                    <Button fx:id="getLogsButton" text="Fetch Logs" onAction="#handleGetLogs" styleClass="button-primary"/>
                    <ToggleButton fx:id="autoRefreshToggle" text="Auto-Refresh" />
                    <ProgressIndicator fx:id="loadingIndicator" prefHeight="20.0" prefWidth="20.0" visible="false"/>
                </HBox>

                <!-- Log Table -->
                <TableView fx:id="logTableView" VBox.vgrow="ALWAYS">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="eventIdColumn" text="Event ID" prefWidth="60"/>
                        <TableColumn fx:id="timeColumn" text="Time" prefWidth="140"/>

                        <!-- Cáº¬P NHáº¬T: ThÃªm cá»™t Host -->
                        <TableColumn fx:id="hostColumn" text="Computer" prefWidth="120"/>
                        <TableColumn fx:id="userColumn" text="User" prefWidth="100"/>

                        <TableColumn fx:id="providerColumn" text="Provider" prefWidth="120"/>
                        <TableColumn fx:id="levelColumn" text="Level" prefWidth="60"/>
                        <TableColumn fx:id="descriptionColumn" text="Description"/>
                    </columns>
                </TableView>
            </VBox>

        </StackPane>
    </center>
</BorderPane>